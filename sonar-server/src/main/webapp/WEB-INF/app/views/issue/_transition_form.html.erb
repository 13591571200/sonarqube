<form method="POST">
  <input type="hidden" name="issue" value="<%= @issue.key -%>"/>
  <input type="hidden" name="transition" value="<%= @transition -%>"/>

  <textarea id="comment" rows="4" name="text" style="width: 100%"></textarea>
  <%= submit_to_remote "submit_btn",
                       message("issues.transition.#{@transition}.button"),
                       :url => {:action => 'transition'},
                       :html => {:issue => "submit_btn"},
                       :update => 'issue' -%>
  &nbsp;
  <%= link_to_remote message('cancel'), :url => {:controller => 'issue', :action => 'show', :key => params[:issue]}, :update => 'issue' -%>
</form>
