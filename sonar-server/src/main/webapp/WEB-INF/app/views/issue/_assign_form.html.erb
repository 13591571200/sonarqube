<form action="">
  <input type="hidden" name="issue" value="<%= params[:issue] -%>"/>
  <input type="hidden" name="id" value="assign"/>
  <table class="width100">
    <tr>
      <td style="vertical-align:top">
        <%= user_select_tag('assignee', :html_id => "assignee-#{params[:issue]}") -%>
        <input type="button" value="<%= message('issue.assign.submit') -%>" onclick="postIssueForm(this)">
        &nbsp;<%= link_to_function message('cancel'), 'closeIssueForm(this)' -%>&nbsp;
        <span class="hidden"><%= image_tag 'loading.gif' -%></span>
      </td>
    </tr>
  </table>
</form>