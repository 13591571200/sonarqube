<% current_user_id = current_user.id if current_user %>
<ul>
  <% 
    @users.each do |user|
      user_name =  user.name
  %>
    <li id="<%= h(user.id) -%>"><strong><%= h(user_name)[0..@char_count-1] -%></strong><%= h(user_name)[@char_count..user_name.size-1] -%> <i><%= "(me)" if current_user_id == user.id -%></i></li>
  <% end %>
</ul>
