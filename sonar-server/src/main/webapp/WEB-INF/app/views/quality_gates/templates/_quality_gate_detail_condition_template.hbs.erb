<script id="quality-gate-detail-condition-template" type="text/x-handlebars-template">
  <td nowrap>
    {{metric.name}}
  </td>
  <td width="10%" nowrap>
    <select name="period">
      <option value="0"><%= message('value') -%></option>
      {{#each periods}}<option value="{{key}}">{{text}}</option>{{/each}}
    </select>
  </td>
  <td width="10%" nowrap>
    <select name="operator">
      {{#operators metric.type}}
        <option value="{{this}}">{{translate 'alerts.operator' this}}</option>
      {{/operators}}
    </select>
  </td>
  <td width="15%">
    <%= image_tag 'levels/warn.png', :alt => message('alerts.warning_tooltip') %>
    <input name="warning" type="text" value="{{warning}}">
  </td>
  <td width="15%">
    <%= image_tag 'levels/error.png', :alt => message('alerts.error_tooltip') %>
    <input name="error" type="text" value="{{error}}">
  </td>
  <td class="quality-gate-condition-actions" width="120px" nowrap>
    {{#if id}}
      <div class="button-group">
        <button class="update-condition" disabled><%= message('update_verb') -%></button>
        <button class="button-red delete-condition"><%= message('delete') -%></button>
      </div>
    {{else}}
      <div class="button-group">
        <button class="add-condition"><%= message('add_verb') -%></button>
        <a class="action cancel-add-condition"><%= message('cancel') -%></a>
      </div>
    {{/if}}
  </td>
</script>
